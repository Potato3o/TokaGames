script/source = "extends Node2D

var startpoint = Vector2.ZERO
var stoppoint = Vector2.ZERO
var count = 0

var vectorArray = []

var hoffset = -520 
var voffset = -900
func _draw():
	for i in vectorArray:
		draw_line(i[0]+ Vector2(hoffset,voffset),i[1]+Vector2(hoffset,voffset),Color.YELLOW,10)

func _input(event):
	if event is InputEventScreenDrag:
		stoppoint = event.position 
		if count == 0:
			startpoint = event.position
			stoppoint = event.position + Vector2(1,1)
		queue_redraw()
		var array = [startpoint,stoppoint]
		vectorArray.append(array)
		startpoint = event.position
		count += 1
	if event is InputEventScreenTouch:
		if event.is_pressed():
			pass # start touch which means start drag
		else:
			count = 0
		



